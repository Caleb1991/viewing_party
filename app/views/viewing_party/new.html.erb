<h1>Create a new Viewing Party</h1>
<h2>MOVIE TITLE PLACEHOLDER</h2>

  <%= form_with model: @party, url: viewing_party_index_path(current_user), local: true do |f| %>
    <%= f.label 'Length of Party' %>
    <%= f.text_field :duration %>

    <%=f.label 'Date' %>
    <%=f.date_field :date %>

    <%=f.label 'Start Time' %>
    <%=f.time_field :start_time %>

    <%= if @friends.present? %>
      <%= @friends.each do |friend| %>
        <%= check_box("Friend", friend.id) %>
        <%= friend.email %>
      <% end %>
    <% end %>

    <%= f.submit 'Create Viewing Party' %>
  <% end %>
