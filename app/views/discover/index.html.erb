<center><h1><%= "Welcome #{current_user.name}!" %></h1>
<%= button_to "Find Top Rated Movies", movies_path, method: :get %>
<h3>OR</h3>
<h4>'Search by Movie Title'</h4>
<%= form_with url: movies_path, method: :get, local: true do |f| %>
  <%= form.label :movie_search %>
  <%= form.text :movie_search %>
  <%= form.submit 'Find Movies' %>
<% end %>
